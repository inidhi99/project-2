{{> navbar}}

<div id="feed" class="mx-6">
  {{#each posts as |post|}}
  <div class="card">
      <div class="card-content">
          {{#if post.human_post }}
             {{> human-post item=post}}
          {{/if}}

           {{#if post.api_cocktail }}
             {{> cocktail-post item=post.api_object}}
          {{/if}}
     
           
           {{#if post.api_horoscope }}
             {{> horoscope-post item=post.api_object}}
          {{/if}}

      </div>
      <footer class="card-footer">
          <a href="#" class="card-footer-item js-modal-trigger" data-target="post-modal">Comment</a>
          <a class="card-footer-item" id="like-button">{{totalLikes}} <span style="visibility:hidden"> -</span><i class="fa-regular fa-thumbs-up" id="thumb-up"></i></a>
          <a href="#" class="card-footer-item" id="dislike-button">{{totalDislikes}} <span style="visibility:hidden"> -</span><i class="fa-regular fa-thumbs-down" id="thumb-down"></i></a>
      </footer>
      {{!-- {{> comment}} --}}

  </div>
  {{/each}}
</div>


