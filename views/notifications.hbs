{{> navbar}}
<div>
{{#each notifications }}

 <div  id= "notification{{id}}" class="nidhi card notification " notificationId="{{id}}" postId="{{post_id}}" notificationActive="false">
  <button class="delete "></button>
<div class="card-content">
    <div class="content">
        {{#if comment }}
          <span>{{comment.user.first_name}} {{comment.user.last_name}}</span>
          <span> has commented "{{comment.contents}}" on your post on {{formatDate comment.createdAt}}</span> 
          
        {{/if}}
        {{#if reaction }}
         <span>{{reaction.user.first_name}} {{reaction.user.last_name}}</span>
          {{#if (isEqual reaction.type "like") }}
          <span> has liked your post on {{formatDate reaction.createdAt}}</span>
        {{else}} 
          <span> has disliked your post on {{formatDate reaction.createdAt}}</span>
        {{/if}}
        {{/if}}
    
    </div>
  </div>
</div>
{{/each}}
</div>
<div id="filler"></div>




  

