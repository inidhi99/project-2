<div id="feed" class="mx-6">
    {{#each posts as |post|}}
    <div class="card">
        <div class="card-content">
            <div class="content">
                <span class="icon">
                    <img src="../public/Logo-filler.png" class="image is-32x32">
                </span>
                <p>{{post.contents}}</p>
                <p>{{post.user.username}}</p>
                <br>
            </div>
        </div>
        <footer class="card-footer">
            <a href="#" class="card-footer-item js-modal-trigger" data-target="static-modal">Comment</a>
            <a href="#" class="card-footer-item">Like</a>
            <a href="#" class="card-footer-item">Dislike</a>
        </footer>
    </div>
    <div id="static-modal" class="modal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <section class="modal-card-body">
                <div class="content">
                    <div class="card">
                        <div class="card-content">
                            <div class="content">
                                <span class="icon">
                                    <img src="../public/Logo-filler.png" class="image is-32x32">
                                </span>
                                <p>{{post.contents}}</p>
                                <p>{{post.user.username}}</p>.
                                <br>
                            </div>
                        </div>

                        <div class="is-flex">
                            <a href="#" class="card-footer-item">Like</a>
                            <a href="#" class="card-footer-item">Dislike</a>
                        </div>
                    </div>
                    {{#each comments}}
                    <div>
                        <p class="pl-2 ">{{post.comment.content}}</p>
                    </div>
                    {{/each}}
            </section>
            <footer class="modal-card-foot">
            </footer>
        </div>

    </div>
    {{/each}}
</div>