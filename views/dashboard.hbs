{{> navbar}}
{{#with user}}
<div class="align-items-center">
    <div class="card-content">
        <div class="content">
            <h1 class="has-text-centered">{{user.username}}</h1>
        </div>
    </div>
</div>
<div id="feed" class="mx-6">
    {{#each user.posts}}
    <div class="card">
        <div class="card-content">
            <div class="content">
                <span class="icon">
                    <img src="../public/Logo-filler.png" class="image is-32x32">
                </span>
                <p>{{user.post.contents}}</p>
                <p>{{user.username}}</p>
                <br>
            </div>
        </div>
        <footer class="card-footer">
            <a href="#" class="card-footer-item js-modal-trigger" data-target="post-modal">Comment</a>
            <a href="#" class="card-footer-item">Like</a>
            <a href="#" class="card-footer-item">Dislike</a>
        </footer>
    </div>
    {{#if loggedIn}}
    <div id="post-modal" class="modal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <section class="modal-card-body">
                <div class="content">
                    <div class="card">
                        <div class="card-content">
                            <div class="content">
                                <span class="icon">
                                    <img src="../public/Logo-filler.png" class="image is-32x32">
                                </span>
                                <p>{{user.post.contents}}</p>
                                <p>{{user.post.user.username}}</p>.
                                <br>
                            </div>
                        </div>

                        <div class="is-flex">
                            <a href="#" class="card-footer-item">{{user.reactions.total_likes}} 👍</a>
                            <a href="#" class="card-footer-item">{{user.reactions.total_dislikes}} 👎</a>
                        </div>
                    </div>
                    {{#each comments}}
                    <div>
                        <p class="pl-2 ">{{user.post.comment.content}}</p>
                    </div>
                    {{/each}}
            </section>
            <footer class="modal-card-foot">
            </footer>
        </div>

    </div>
    {{/if}}
    {{/each}}
</div>